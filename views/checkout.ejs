<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Checkout</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body { 
            font-family: "Poppins", sans-serif;
            background-color: #000;
            color: #fff;
            margin: 0;
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #fff;
            margin-bottom: 30px;
        }

        .checkout-container {
            max-width: 900px;
            margin: 0 auto;
            background-color: #111;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 0 20px rgba(255,255,255,0.05);
        }

        .product {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            background-color: #1a1a1a;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 25px;
        }

        .product img {
            width: 150px;
            height: auto;
            border-radius: 10px;
            margin-right: 20px;
        }

        .product-details {
            flex: 1;
        }

        .product-details h3 {
            margin: 0;
            font-size: 1.5rem;
            color: #fff;
        }

        .product-details p {
            margin: 8px 0;
            color: #bbb;
        }

        .price {
            font-size: 1.2rem;
            color: #00ff80;
            font-weight: 600;
        }

        .form-section {
            background-color: #1a1a1a;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
            color: #ccc;
        }

        input[type="text"], input[type="tel"], textarea {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 8px;
            background-color: #222;
            color: #fff;
            margin-bottom: 15px;
            font-size: 0.95rem;
        }

        input[type="radio"] {
            accent-color: #00ff80;
        }

        .pay-btn {
            display: block;
            width: 100%;
            padding: 15px;
            background-color: #00ff80;
            border: none;
            border-radius: 10px;
            color: #000;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
        }

        .pay-btn:hover {
            background-color: #00cc66;
        }

        @media (max-width: 768px) {
            .product {
                flex-direction: column;
                text-align: center;
            }

            .product img {
                margin-bottom: 15px;
                margin-right: 0;
                width: 100%;
                max-width: 250px;
            }
        }
    </style>
</head>
<body>

    <div class="checkout-container">
        <h2>Checkout</h2>

        <!-- Product Info -->
        <div class="product">
            <img src="<%= product.productImage %>" alt="<%= product.title %>">
            <div class="product-details">
                <h3><%= product.title %></h3>
                <p><%= product.productDetails %></p>
                <p class="price">‚Çπ<%= product.price %></p>
            </div>
        </div>
        <form action="/checkout" method="POST">
        <!-- Customer Info -->
        <div class="form-section">
            <label for="name">Full Name</label>
            <input type="text" id="name" placeholder="Your Name" value="<%= user.username %>">

            <label for="phone">Phone Number</label>
            <input type="tel" id="phone" placeholder="10-digit number" value="<%= user.phoneNumber %>">

            <label for="address">Delivery Address</label>
            <textarea id="address" rows="3" placeholder="Enter your full address"><%= user.deliveryAddress %></textarea>
        </div>

        <!-- Payment Method -->
        <div class="form-section">
            <label>Select Payment Method:</label>
            <div style="margin-bottom: 15px;">
                <input type="radio" name="payment" value="UPI" id="upi" checked> <label for="upi" style="display:inline;">UPI</label><br>
                <input type="radio" name="payment" value="COD" id="cod"> <label for="cod" style="display:inline;">Cash on Delivery</label>
            </div>

            <div id="upiSection">
                <label>Enter UPI ID</label>
                <input type="text" id="upiId" placeholder="example@upi">
            </div>
        </div>

        <button class="pay-btn" type="submit">Place Order</button>
    </div>
    </form>

    <script>
        const upiRadio = document.getElementById('upi');
        const codRadio = document.getElementById('cod');
        const upiSection = document.getElementById('upiSection');

        upiRadio.addEventListener('change', () => upiSection.style.display = 'block');
        codRadio.addEventListener('change', () => upiSection.style.display = 'none');

        function pay() {
            const paymentMethod = document.querySelector('input[name="payment"]:checked').value;
            const name = document.getElementById('name').value.trim();
            const phone = document.getElementById('phone').value.trim();
            const address = document.getElementById('address').value.trim();

            if (!name || !phone || !address) {
                alert('‚ö†Ô∏è Please fill all customer details.');
                return;
            }

            const productName = "<%= product.name %>";
            const productPrice = "<%= product.price %>";

            if (paymentMethod === 'UPI') {
                const upiId = document.getElementById('upiId').value.trim();
                if (!upiId) {
                    alert('‚ö†Ô∏è Please enter UPI ID.');
                    return;
                }
                alert(`‚úÖ Payment Successful!\n\nName: ${name}\nPhone: ${phone}\nAddress: ${address}\nProduct: ${productName}\nAmount: ‚Çπ${productPrice}\nPaid via UPI: ${upiId}`);
            } else {
                alert(`üõí Order Placed!\n\nName: ${name}\nPhone: ${phone}\nAddress: ${address}\nProduct: ${productName}\nAmount: ‚Çπ${productPrice}\nPayment Method: Cash on Delivery`);
            }
        }
    </script>

</body>
</html>
