<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.name %> | Profile - BuyKaro</title>
  <style>
    body {
      background-color: #000;
      color: #fff;
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
    }

    nav {
      background-color: #111;
      border-bottom: 1px solid #222;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 40px;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: #fff;
    }

    .nav-links {
      display: flex;
      gap: 25px;
      align-items: center;
    }

    .nav-links a {
      text-decoration: none;
      color: #fff;
      transition: 0.3s;
    }

    .nav-links a:hover {
      color: #00ff80;
    }

    .profile-container {
      max-width: 900px;
      margin: 50px auto;
      background-color: #111;
      border: 1px solid #222;
      border-radius: 12px;
      padding: 40px;
    }

    .profile-header {
      display: flex;
      align-items: center;
      gap: 30px;
      border-bottom: 1px solid #222;
      padding-bottom: 20px;
      margin-bottom: 30px;
    }

    .profile-pic {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background-color: #222;
      background-image: url('https://cdn-icons-png.flaticon.com/512/847/847969.png');
      background-size: cover;
      background-position: center;
      border: 2px solid #333;
    }

    .profile-info h2 {
      margin: 0;
      font-size: 1.8rem;
      color: #fff;
    }

    .profile-info p {
      color: #ccc;
      margin: 5px 0;
    }

    .section {
      margin-top: 30px;
    }

    .section h3 {
      border-bottom: 1px solid #222;
      padding-bottom: 10px;
      margin-bottom: 15px;
      color: #fff;
      font-size: 1.2rem;
    }

    .address, .orders {
      color: #ccc;
      font-size: 0.95rem;
    }

    .orders ul {
      list-style: none;
      padding: 0;
    }

    .orders li {
      border: 1px solid #222;
      background-color: #0c0c0c;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 10px;
      color: #ccc;
    }

    .orders li strong {
      color: #fff;
    }

    .logout-btn {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      border: 1px solid #fff;
      color: #fff;
      background-color: transparent;
      border-radius: 6px;
      text-decoration: none;
      transition: 0.3s;
    }

    .logout-btn:hover {
      background-color: #fff;
      color: #000;
    }

    @media (max-width: 768px) {
      .profile-header {
        flex-direction: column;
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav>
    <div class="logo">BuyKaro</div>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/cart">Cart</a>
      <a href="/profile">Profile</a>
      <a href="/logout">Logout</a>
    </div>
  </nav>

  <div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
      <div class="profile-pic"></div>
      <div class="profile-info">
  <h2><%= userprofile ? userprofile.username : "Unknown User" %></h2>
<p><strong>Email:</strong> <%= userprofile ? userprofile.email : "No email available" %></p>
<p><strong>Contact:</strong> <%= userprofile && userprofile.phoneNumber ? userprofile.phoneNumber : "Not provided" %></p>

      </div>
    </div>

    <!-- Address Section -->
    <div class="section address">
      <h3>Address</h3>
      <p><%= user.deliveryAddress || "No address added yet." %></p>
    </div>

    <!-- Order History Section -->
    <div class="section orders">
      <h3>Order History</h3>
      <% if (orders && orders.length > 0) { %>
        <ul>
          <% orders.forEach(order => { %>
            <li>
              <strong>Product:</strong> <%= order.productTitle %><br>
              <strong>Order ID:</strong> <%= order._id %><br>
              <strong>Date:</strong> <%= order.orderDate %><br>
              <strong>Total:</strong> $<%= order.totalPrice %><br>
              <strong>Status:</strong> <%= order.status %>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>You have not placed any orders yet.</p>
      <% } %>
    </div>

    <a href="/logout" class="logout-btn">Logout</a>
  </div>
</body>
</html>
