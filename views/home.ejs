<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BuyKaro | All Products</title>

  <style>
    body {
      background-color: #000;
      color: #fff;
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
    }

    header {
      text-align: center;
      padding: 40px 20px 20px;
    }

    header h1 {
      font-size: 2.5rem;
      margin-bottom: 10px;
      color: #fff;
    }

    header p {
      color: #ccc;
      font-size: 1.1rem;
    }

    /* Grid layout for product cards */
    .products {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
      gap: 30px;
      padding: 40px;
      max-width: 1300px;
      margin: auto;
    }

    /* Product Card Styling */
    .product {
      background-color: #111;
      border: 1px solid #222;
      border-radius: 12px;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      text-align: center;
      transition: all 0.3s ease;
      min-height: 420px;
    }

    .product:hover {
      border-color: #fff;
      transform: translateY(-6px);
    }

    .product img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 15px;
    }

    .product h2 {
      font-size: 1.2rem;
      color: #fff;
      margin: 10px 0 6px;
    }

    .product p {
      color: #ccc;
      font-size: 0.95rem;
      margin: 4px 0;
      line-height: 1.4;
    }

    .product strong {
      color: #fff;
    }

    .buttons {
      margin-top: auto;
      display: flex;
      justify-content: center;
      gap: 10px;
      width: 100%;
    }

    .buttons button,
    .buttons a {
      text-decoration: none;
      padding: 10px 15px;
      border: none;
      border-radius: 6px;
      font-weight: 500;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .buttons button {
      background-color: #fff;
      color: #000;
      flex: 1;
    }

    .buttons button:hover {
      background-color: #ccc;
    }

    .buttons a {
      background-color: #000;
      color: #fff;
      border: 1px solid #fff;
      flex: 1;
      text-align: center;
      padding-top: 10px;
    }

    .buttons a:hover {
      background-color: #fff;
      color: #000;
    }

    @media (max-width: 768px) {
      header h1 {
        font-size: 2rem;
      }

      .products {
        padding: 20px;
        gap: 20px;
      }

      .product {
        min-height: 380px;
      }
    }
  </style>
</head>

<body>
  <header>
    <h1>Welcome to BuyKaro</h1>
    <p>Your one-stop shop for all your needs!</p>
  </header>

  <div class="products">
    <% products.forEach(function(product) { %>
      <div class="product">
        <% if (product.productImage) { %>
          <img src="<%= product.productImage %>" alt="<%= product.title %>" />
        <% } else { %>
          <div style="height:200px; display:flex; align-items:center; justify-content:center; background:#222; border-radius:8px;">
            <p style="color:#666;">No image available</p>
          </div>
        <% } %>

        <div class="product-info">
          <h2><%= product.title %></h2>
          <p><%= product.productDetails %></p>
          <p><strong>Features:</strong> <%= product.features %></p>
          <p><strong>Price:</strong> $<%= product.price %></p>
        </div>

        <div class="buttons">
          <button>Add to Cart</button>
          <a href="/products/<%= product._id %>">Buy Now</a>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>
